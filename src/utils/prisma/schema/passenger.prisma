model Passenger {
    id                     String        @id @default(uuid(7)) @db.Uuid
    type                   PassengerType
    name                   String
    birthDate              DateTime?     @map("birth_date") @db.Date
    familyName             String?       @map("family_name")
    identityType           IdentityType  @map("identity_type")
    identityNumber         String        @map("identity_number")
    identityNationality    String?       @map("identity_nationality")
    identityExpirationDate DateTime?     @map("identity_expiration_date") @db.Date

    bookings Booking[]

    createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz()
    updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz()

    @@map("passenger")
}

enum PassengerType {
    USER
    ADULT
    CHILD
    INFANT
}

enum IdentityType {
    KTP
    PASSPORT
}
